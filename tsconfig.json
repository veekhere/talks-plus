{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@parts/*": ["src/injection/parts/*"],
      "@core/*": ["src/injection/core/*"],
      "@observers/*": ["src/injection/observers/*"]
    },
    "strict": true,
    "target": "es6",
    "moduleResolution": "bundler",
    "module": "ES6",
    "esModuleInterop": true,
    "sourceMap": false,
    "rootDir": "src",
    "outDir": "dist/js",
    "noEmitOnError": true,
    "typeRoots": ["node_modules/@types"]
  }
}
